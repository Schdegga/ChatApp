<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainChatActivity" >

 	<TextView
 	    android:id="@+id/textView1"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:layout_above="@+id/chatPartners"
 	    android:layout_alignParentLeft="true"
 	    android:layout_alignParentRight="true"
 	    android:layout_alignParentTop="true"
 	    android:background="@android:color/holo_red_light"
 	    android:gravity="center"
 	    android:text="@string/contacts"
 	    android:textAppearance="?android:attr/textAppearanceLarge"
 	    android:textColor="@android:color/white" />
 	<Button
        android:id="@+id/addChatPartner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_red_light"
        android:text="@string/add_user_icon"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="normal"
        android:typeface="monospace" />

 	<ListView
 	    android:id="@+id/chatPartners"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:layout_alignParentBottom="true"
 	    android:layout_alignParentLeft="true"
 	    android:layout_below="@+id/addChatPartner"
 	    
 	    >

 	</ListView>

</RelativeLayout>