<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar">
        <activity
            android:name="com.example.chatapp.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chatapp.MainChatActivity"
            android:label="@string/title_activity_main_chat" >
        </activity>
        <activity
            android:name="com.example.chatapp.ChooseAccountActivity"
            android:label="@string/title_activity_choose_account"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.example.chatapp.ChatRoomActivity"
            android:label="@string/title_activity_chat_room" 
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>